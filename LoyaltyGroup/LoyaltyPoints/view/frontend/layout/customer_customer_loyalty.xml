<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <title>Loyalty Points</title>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">My loyalty program</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="LoyaltyGroup\LoyaltyPoints\Block\Post"
                   name="my_tab"
                   template="LoyaltyGroup_LoyaltyPoints::mytab.phtml"
                   cacheable="false">
            </block>
        </referenceContainer>
    </body>
</page>